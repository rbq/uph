%ul#home{ :title => 'UpHCal', :selected => 'true' }
  - @entries.each_with_index do |e, i|
    %li
      %a{ :href => '#entry'+i.to_s }= e[:title].word_shorten(28)

- @entries.each_with_index do |e, i|
  %div{ :id => 'entry'+i.to_s, :class => 'panel', :title => e[:title].word_shorten(28) }
    %h2= e[:title]
    %fieldset
      .row
        %label Zeit
        %span= e[:start] + (e[:end] ? " bis #{e[:end]}" : '') + ' Uhr'
      .row
        %label Raum
        %span= e[:room] ? "Raum #{e[:room]}" : 'keine Raumangabe'
